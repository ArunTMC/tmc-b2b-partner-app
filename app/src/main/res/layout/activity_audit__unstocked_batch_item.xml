<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TMCBackgroundLightPurpleColor"
    tools:context=".activity.Audit_UnstockedBatch_item">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:id="@+id/back_IconLayout"
        >
        <ImageView
            android:id="@+id/backButton_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="center"
            android:src="@drawable/icon_backbutton"
            android:contentDescription="@string/todo" />
    </LinearLayout>

    <TextView
        android:id="@+id/toolBarHeader_TextView"
        android:layout_width="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="@string/edit_unreviewedItem_details"
        tools:ignore="RelativeOverlap" />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/border_line"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="9dp"
        app:cardCornerRadius="15dp"
        android:layout_below="@id/divider"
        android:layout_height="140dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/barcode_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="16sp"
                android:text="@string/barcode" />


            <TextView
                android:id="@+id/barcodeno_textview"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="@string/sampleBatchId"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gender_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/barcode_label"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                android:text="@string/gender_type" />

            <TextView
                android:id="@+id/genderName_textview"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender_label"
                android:layout_marginStart="11dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_toEndOf="@+id/barcodeno_textview"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="@string/sampleBatchId"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/breedType_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="70dp"
                android:layout_toEndOf="@+id/gender_label"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                android:text="@string/breed_type" />

            <TextView
                android:id="@+id/breedType_textview"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/breedType_label"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_toEndOf="@+id/genderName_textview"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="@string/sampleBatchId"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/batchno_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/barcodeno_textview"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                android:text="@string/batch_id" />

            <TextView
                android:id="@+id/batchno_textview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentweight_label"
                android:layout_marginStart="21dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="@string/sampleBatchId"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/currentweight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@id/batchno_textview"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/breedType_textview"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                android:text="@string/currentWeight" />

            <TextView
                android:id="@+id/currentweight_textview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentweight_label"
                android:layout_marginStart="21dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@id/batchno_textview"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="@string/sampleBatchId"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/kg_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="12dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/currentweight_textview"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="Kg"
                />





        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/earTagLost_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_button_background"
        android:elevation="40dp"
        android:fontFamily="@font/courier_prime_bold"
        android:text="@string/change_ear_tag_to_new_one"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:textColor="@color/TMCDarkPinkTextColor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/goatLost_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/black_button_background"
        android:elevation="40dp"
        android:fontFamily="@font/courier_prime_bold"
        android:text="Mark as Goat Lost"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:layout_below="@+id/earTagLost_button"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="16sp" />



    <FrameLayout
        android:id="@+id/batchItemDetailsFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="30dp"
        android:background="@color/TMCTransparentColor"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TMC_ProgressBarGrey_Color"
        android:alpha=".6"
        android:translationZ="90dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:translationZ="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/TMCPrimaryPurpleColor"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>




</RelativeLayout>