<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DatewisePlacedOrdersList">





    <LinearLayout
        android:id="@+id/back_IconLayout"
        android:layout_width="40dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/backButton_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            android:src="@drawable/icon_backbutton" />
    </LinearLayout>

    <TextView
        android:id="@+id/toolBarHeader_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="Orders List"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/border_line" />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:id="@+id/abovelistview"

        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/divider"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/searchname_layout"
            android:orientation="horizontal">





            <TextView
                android:id="@+id/retailerName_textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="Search Buyer Name Here"
                android:paddingStart="10dp"
                android:background="@drawable/white_backgroundwith_black_border"
                android:paddingEnd="5dp"
                android:visibility="visible"
                />

            <EditText
                android:id="@+id/retailerName_editText"
                android:background="@drawable/white_edittext_with_greyborder"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="12dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="13sp"
                android:hint="Enter Buyer Name"
                android:imeOptions="actionDone"
                android:visibility="gone"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginEnd="10dp"
                android:id="@+id/search_IconLayout"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType ="centerCrop"
                    android:src="@mipmap/search_icon"
                    android:visibility="visible"
                    android:contentDescription="@string/todo" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:id="@+id/close_IconLayout"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType ="fitXY"
                    android:alpha=".8"
                    android:visibility="visible"
                    android:src="@mipmap/close_thicker_icon"
                    android:contentDescription="@string/todo" />
            </LinearLayout>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"

            android:layout_marginTop="5dp"
            android:background="@drawable/border_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/open_sans_semibold"

                android:gravity="center_vertical"
                android:text="No.of. orders  :-  "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ordersCount_textwidget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="16sp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"

            android:background="@drawable/border_line"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/listviewrelated_instruction_textview"
            android:layout_height="20dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"

            android:layout_below="@+id/searchname_layout"
            android:text="# This List contains orders from last 15 days . "
            android:textSize="11sp"
            android:textColor="@color/TMCPrimaryPurpleColor"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_line"
            />


    </LinearLayout>
    <androidx.core.widget.NestedScrollView

        android:id="@+id/idNestedSV"
        android:layout_width="match_parent"
        android:overScrollMode="never"

        android:layout_below="@+id/abovelistview"
        android:layout_height="match_parent"
        >

        <!--linear layout for displaying
            our recycler view-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--recycler view for displaying our list of data
                and we are making nested scroll for our
                recycler view as false-->
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/earTagItems_recyclerview"
            />

            <!--we are adding progress bar
                for the purpose of loading-->
            <ProgressBar
                android:id="@+id/idPBLoading"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/ordersinstruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/idNestedSV"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="  "
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TMC_ProgressBarGrey_Color"
        android:alpha=".6"
        android:translationZ="90dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:translationZ="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/TMCPrimaryPurpleColor"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>





</RelativeLayout>