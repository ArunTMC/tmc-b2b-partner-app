<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/label"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="Are you sure ! \n Do you need to change barcode ? " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/black"
            android:text="Old Barcode : " />

        <TextView
            android:id="@+id/old_barcode__textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/black"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/linearlayout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/black"
            android:text="New Barcode : " />

        <TextView
            android:id="@+id/new_barcode__textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/black"
            android:text="TextView" />
    </LinearLayout>


    <Button
        android:id="@+id/change_barcode_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:text="Change Barcode"
        android:textColor="@color/white"
        android:background="@drawable/blue_button_background"
        android:layout_below="@+id/linearlayout"


        />

</RelativeLayout>
</RelativeLayout>