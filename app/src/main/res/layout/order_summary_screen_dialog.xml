<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:gravity="center"
    android:background="@color/TMCTransparentColor"
    android:layout_height="match_parent">

   <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="2dp"
   android:background="@color/white"
   android:paddingTop="10dp"
   android:paddingBottom="45dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="Order Summary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/border_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="4dp"
            android:textColor="@color/TMCPrimaryPurpleColor"
            android:layout_weight=".94"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Gender" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="4dp"
            android:layout_weight="1.5"
            android:textColor="@color/TMCPrimaryPurpleColor"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Qty" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="@color/TMCPrimaryPurpleColor"
            android:layout_weight="1.3"
            android:textSize="15sp"
            android:text="Wt (in Kg)" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/border_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_weight=".94"
            android:gravity="center"
            android:textSize="13sp"
            android:text="@string/MALE" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/male_Qty_textview"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:text="-" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/male_Wt_textview"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1.3"
            android:textSize="13sp"
            android:text="-" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_weight=".94"
            android:gravity="center"
            android:textSize="13sp"
            android:text="@string/FEMALE" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/female_Qty_textview"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:text="-" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/female_Wt_textview"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1.3"
            android:textSize="13sp"
            android:text="-" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_weight=".94"
            android:gravity="center"
            android:textSize="13sp"
            android:text="@string/FEMALE_WITH_BABY" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/femaleWithBaby_Qty_textview"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:text="-" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/femaleWithBaby_Wt_textview"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1.3"
            android:textSize="13sp"
            android:text="-" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/border_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_weight=".94"
            android:gravity="center"
            android:textSize="13sp"
            android:text="Total Qty &amp; Wt (Kgs)" />
        <TextView
            android:id="@+id/total_Qty_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:text="-" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_Wt_textview"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1.3"
            android:textSize="13sp"
            android:text="-" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/border_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:textColor="@color/TMCPrimaryPurpleColor"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="13sp"
            android:text="Price Per Kg" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/final_pricePerKg_textview"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:layout_weight="2.5"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="right"
            android:text="-" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:textColor="@color/TMCPrimaryPurpleColor"
            android:layout_weight="1.6"
            android:gravity="right"
            android:textSize="13sp"
            android:text="Total Price " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:gravity="center"
            android:text=" ( Weight * Price Per Kg ) " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:id="@+id/total_Price_textview"
            android:layout_marginTop="8dp"
            android:layout_weight="2.5"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="right"
            android:text="-" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:textColor="@color/TMCPrimaryPurpleColor"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="13sp"
            android:text=" Discount " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_Discount_textview"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:layout_weight="2.5"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="right"
            android:text="-" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:textColor="@color/TMCPrimaryPurpleColor"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="13sp"
            android:text=" Final Amount " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/finalAmount_textview"

            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="8dp"
            android:layout_weight="2.5"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="right"
            android:text="-" />




    </LinearLayout>


    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Proceed Checkout"
        android:id="@+id/proceedCheckOut_button"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/blue_button_background"
        android:textColor="@color/white"
        />

</LinearLayout>
</RelativeLayout>