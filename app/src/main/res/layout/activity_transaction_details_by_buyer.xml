<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".second_version.activity.TransactionDetails_by_buyer">



    <LinearLayout
        android:id="@+id/back_IconLayout"
        android:layout_width="40dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/backButton_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            android:src="@drawable/icon_backbutton" />
    </LinearLayout>

    <TextView
        android:id="@+id/toolBarHeader_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="Transaction Details By Buyer"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/border_line" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:id="@+id/abovelistview"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Select Buyer "/>


            <AutoCompleteTextView
                android:id="@+id/buyer_details_autoCompleteTextview"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:paddingStart="10dp"

                android:paddingEnd="5dp"
                android:background="@drawable/white_backgroundwith_black_border_for_spinner"
                android:layout_height="38dp"
                android:layout_weight="1" />





        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/fromdatepickerLayout"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From Date "
                    android:textSize="13sp"
                    android:textColor="@color/TMCPrimaryPurpleColor"
                    android:fontFamily="@font/open_sans"
                    />

                <TextView
                    android:id="@+id/startDateValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="--/--/--/--"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans_semibold"
                    />





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="visible"
                android:id="@+id/todatepickerLayout"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To Date "
                    android:textSize="13sp"
                    android:textColor="@color/TMCPrimaryPurpleColor"
                    android:fontFamily="@font/open_sans"
                    />

                <TextView
                    android:id="@+id/endDateValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="--/--/--/-- "
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans_semibold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_weight="1.2"
                android:id="@+id/fetchData_layout"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/TMCPrimaryPurpleColor"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center_vertical"
                    android:text="Fetch Data" />
            </LinearLayout>
        </LinearLayout>





        <TextView
            android:layout_width="match_parent"
            android:id="@+id/listviewrelated_instruction_textview"
            android:layout_height="20dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"

            android:layout_below="@+id/searchname_layout"
            android:text="# This List contains orders from last 15 days . "
            android:textSize="11sp"
            android:textColor="@color/TMCPrimaryPurpleColor"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_line"
            />


    </LinearLayout>
    <androidx.core.widget.NestedScrollView

        android:id="@+id/idNestedSV"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:visibility="gone"
        android:layout_below="@+id/abovelistview"
        android:layout_height="match_parent"
        >

        <!--linear layout for displaying
            our recycler view-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--recycler view for displaying our list of data
                and we are making nested scroll for our
                recycler view as false-->
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/paymentItems_recyclerview"
                />

            <!--we are adding progress bar
                for the purpose of loading-->
            <ProgressBar
                android:id="@+id/idPBLoading"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="15dp"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:id="@+id/paymentReportCreated_CardView"
        android:layout_centerInParent="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/pdfDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/TMCLightGreyEditText"
                android:elevation="10dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="10dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/Grey"
                    android:layout_margin="5dp"
                    android:elevation="10dp">

                    <ImageView
                        android:id="@+id/roundedImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/pdf_icon"
                        android:background="@color/Grey"
                        android:backgroundTint="@color/Grey"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:id="@+id/filename_textview"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:fontFamily="@font/courier_prime_bold"
                        android:text="Paymentreport_for_MKK..."/>

                    <TextView
                        android:layout_width="266dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Payment report PDF created for selected date and buyer . "
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>







            </LinearLayout>

            <Button
                android:id="@+id/sharePDf_Button"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/black_button_background"
                android:elevation="60dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/pdfDetailsLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="@font/courier_prime_bold"
                android:text="Share PDF"
                android:textAllCaps="false"
                android:textColor="@color/white"

                android:textSize="15sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




    <TextView
        android:id="@+id/recordsListinstruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/idNestedSV"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Please select Buyer &amp; select From - To Date then click Fetch Data "
        android:visibility="visible"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TMC_ProgressBarGrey_Color"
        android:alpha=".6"
        android:translationZ="90dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:translationZ="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/TMCPrimaryPurpleColor"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>
</RelativeLayout>