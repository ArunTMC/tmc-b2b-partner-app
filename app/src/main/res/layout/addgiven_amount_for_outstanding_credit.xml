<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent"
    android:padding="30dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"

    app:cardCornerRadius="20dp"
    android:layout_centerInParent="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="27dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="1dp"
            android:id="@+id/close_IconLayout_addAmountDialog"
            >
            <ImageView
                android:id="@+id/backButton_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType ="centerCrop"
                android:src="@mipmap/close_thicker_icon"
                android:contentDescription="@string/todo" />
        </LinearLayout>


        <TextView
            android:id="@+id/notes_label"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:text=" Enter Amount given by Retailer : " />




        <EditText
            android:id="@+id/notes_edittext"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/white_edittext_with_greyborder"
            android:textColor="@color/black"
            android:gravity="top"
            android:inputType="number"
            android:digits="0123456789."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notes_label"
            android:layout_height="70dp"
            android:text="" />



        <Button
            android:id="@+id/save_button"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_button_background"
            android:elevation="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notes_edittext"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/courier_prime_bold"
            android:text="Add Payment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>


</RelativeLayout>