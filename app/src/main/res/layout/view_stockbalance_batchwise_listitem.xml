<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bordered_ripple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/batchDetails_CardView">

        <TableRow
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <TextView
                android:id="@+id/batchNo_textview_table"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="BatchNo"
                android:textColor="@color/black"
                android:textSize="10sp" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Grey" />


            <TextView
                android:id="@+id/sentDate_textview_table"

                android:layout_width="120dp"
                android:layout_height="40dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="Date"
                android:textColor="@color/black"

                android:textSize="10sp" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Grey" />


            <TextView
                android:id="@+id/totalCount_textview_table"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="TotalCount"
                android:textColor="@color/black"
                android:textSize="10sp" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Grey" />


            <TextView
                android:id="@+id/soldCount_textview_table"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"

                android:text="SoldItem"
                android:textColor="@color/black"
                android:textSize="10sp" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Grey" />


            <TextView
                android:id="@+id/unsoldCount_textview_table"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:fontFamily="@font/open_sans_bold"

                android:gravity="center"
                android:text="UnsoldItem"
                android:textColor="@color/black"
                android:textSize="10sp" />


        </TableRow>


    </TableLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/batchDetails_CardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="10dp"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="10dp">

            <TextView
                android:id="@+id/batchno_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/batch_id"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/batchNo_textview"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="1dp"
                android:text="@string/sampleBatchId"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/batchno_label" />

            <TextView
                android:id="@+id/createdDate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/sent_date"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/batchNo_textview"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sentdate_textview"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="45dp"

                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/sampleDate"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/batchNo_textview"
                app:layout_constraintTop_toBottomOf="@+id/createdDate_label" />


            <TextView
                android:id="@+id/totalCount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="TotalCount"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/batchNo_textview" />

            <TextView
                android:id="@+id/totalCount_textview"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="1dp"
                android:text="@string/sampleBatchId"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totalCount_label" />

            <TextView
                android:id="@+id/soldCount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="SoldCount"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/totalCount_label"
                app:layout_constraintTop_toBottomOf="@+id/batchNo_textview" />

            <TextView
                android:id="@+id/soldCount_textview"
                android:layout_width="76dp"
                android:layout_height="30dp"
                android:layout_marginStart="37dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="1dp"
                android:text="@string/sampleBatchId"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/totalCount_label"
                app:layout_constraintTop_toBottomOf="@+id/soldCount_label" />


            <TextView
                android:id="@+id/unsoldCount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="UnsoldCount"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/soldCount_label"
                app:layout_constraintTop_toBottomOf="@+id/batchNo_textview" />

            <TextView
                android:id="@+id/unsoldCount_textview"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"

                android:paddingEnd="1dp"
                android:text="@string/sampleBatchId"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/soldCount_label"
                app:layout_constraintTop_toBottomOf="@+id/unsoldCount_label" />


            <Button
                android:id="@+id/viewsoldItem_Button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginStart="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/black_button_background"
                android:elevation="30dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:text="View Sold Items"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totalCount_textview" />


            <Button
                android:id="@+id/viewUnSoldItem_Button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/pink_button_background"
                android:elevation="30dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="View Unsold Items"
                android:textAllCaps="false"
                android:textColor="@color/TMCDarkPinkTextColor"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/totalCount_textview" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>