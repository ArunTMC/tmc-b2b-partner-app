<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TMCBackgroundLightPurpleColor"
    android:orientation="vertical"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    tools:context=".fragment.DeliveryCenterSettingsFragment">


    <LinearLayout
        android:id="@+id/back_IconLayout"
        android:layout_width="40dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/backButton_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            android:src="@drawable/icon_backbutton" />
    </LinearLayout>


    <TextView
        android:id="@+id/toolBarHeader_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/tmc_deliveryCenter_1"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/border_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="40dp">


        <LinearLayout
            android:id="@+id/ManageRetailerDetailsConfiguration_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/TMCBackgroundLightPurpleColor"
                android:fontFamily="@font/courier_prime_bold"
                android:gravity="center_vertical"
                android:paddingStart="5dp"

                android:text="Manage Retailer Details"
                android:textAllCaps="false"
                android:textColor="@color/Grey"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/add_or_edit_retailers_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_bordered_ripple"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight=".1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:text="Add or Edit Retailer Details "
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:alpha=".7"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="10dp"
                        android:contentDescription="@string/todo"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/rightarrow" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/TMCBackgroundLightPurpleColor" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="40dp">


        <LinearLayout
            android:id="@+id/ManageGoatDetailsConfiguration_linearLayout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/TMCBackgroundLightPurpleColor"
                android:fontFamily="@font/courier_prime_bold"
                android:gravity="center_vertical"
                android:paddingStart="5dp"

                android:text="Manage Order Details"
                android:textAllCaps="false"
                android:textColor="@color/Grey"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/datewisePlacedOrdersList_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_bordered_ripple"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight=".1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:text="Datewise Placed Orders List "
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:alpha=".7"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="10dp"
                        android:contentDescription="@string/todo"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/rightarrow" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/TMCBackgroundLightPurpleColor" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="40dp">


        <LinearLayout
            android:id="@+id/GeneralConfiguration_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/TMCBackgroundLightPurpleColor"
                android:fontFamily="@font/courier_prime_bold"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:text="General"
                android:textColor="@color/Grey"
                android:textSize="15sp" />

            <Button
                android:id="@+id/goatgradeDetails_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:elevation="4dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:text="Change Goat Grade Details"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/Delivery_Center_Name"
                    android:textColor="@color/black"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/deliveryCenter_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/open_sans"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"

                    />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".2"

                android:background="@color/black"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="12dp"

                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/Mobile_Number"
                    android:textColor="@color/black"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/userMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/open_sans"

                    android:text="+91-----------"
                    android:textColor="@color/black"
                    android:textSize="14sp"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:alpha=".2"
                android:background="@color/black"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/Login_as_another_vendor_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_bordered_ripple"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight=".1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:text="@string/LogInAsAnotherVendor"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:alpha=".7"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="10dp"
                        android:contentDescription="@string/todo"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/rightarrow" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/deliverycenterLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:elevation="4dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:text="@string/LogInAsAnotherVendor"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/TMCBackgroundLightPurpleColor" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/white_backgroundwith_black_border"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/LogOut"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Version :  "
                    android:textColor="@color/colorTransparent"

                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/Version_No"
                    android:textColor="@color/colorTransparent"

                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>