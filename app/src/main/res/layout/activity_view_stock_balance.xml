<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/TMCLightGreyEditText"
    tools:context=".second_version.activity.ViewStockBalance"
>


    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:background="@color/TMC_ProgressBarGrey_Color"
        android:alpha=".6"
        android:translationZ="90dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone" >


    </LinearLayout>

    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"

        android:translationZ="100dp"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/TMCPrimaryPurpleColor"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>




    <LinearLayout
    android:id="@+id/back_IconLayout"
    android:layout_width="40dp"
    android:layout_height="45dp">

    <ImageView
        android:id="@+id/backButton_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/todo"
        android:scaleType="center"
        android:src="@drawable/icon_backbutton" />
</LinearLayout>


<TextView
    android:id="@+id/toolBarHeader_TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="10dp"
    android:layout_toEndOf="@+id/back_IconLayout"
    android:text="Stock Balance Report"
    android:textColor="@color/black"
    android:textSize="20sp" />



<View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="54dp"
    android:background="@drawable/border_line" />




            <androidx.cardview.widget.CardView
                android:id="@+id/tableLyout"
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"

                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="70dp"
                android:layout_height="wrap_content" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:id="@+id/headingtablelayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="40dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:background="@drawable/white_edittext_with_greyborder"
                            android:backgroundTint="@color/TMCPalePurple"

                            android:layout_height="40dp" >

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:text="BatchNo" />

                            <View
                                android:layout_height="match_parent"
                                android:layout_width="1dp"
                                android:background="@color/Grey"/>
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:text="Date" />



                            <View
                                android:layout_height="match_parent"
                                android:layout_width="1dp"
                                android:background="@color/Grey"/>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/black"
                                android:text="TotalCount" />


                            <View
                                android:layout_height="match_parent"
                                android:layout_width="1dp"
                                android:background="@color/Grey"/>

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textSize="10sp"

                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/black"
                                android:text="SoldItem" />


                            <View
                                android:layout_height="match_parent"
                                android:layout_width="1dp"
                                android:background="@color/Grey"/>


                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:textSize="10sp"

                                android:gravity="center"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="@color/black"
                                android:text="UnsoldItem" />



                        </TableRow>



                    </TableLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableLayout_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="41dp"
                        app:layout_constraintTop_toBottomOf="@+id/headingtablelayout"
                        app:layout_constraintStart_toStartOf="parent" />




                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/finaltotalLayout"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="100dp"
                app:cardElevation="10dp"
                android:layout_alignBottom="@+id/tableLyout"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/border"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginEnd="0dp"
                        android:background="@color/Grey" />

                    <TableLayout
                        android:id="@+id/totalTableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="40dp">


                            <TextView
                                android:layout_width="283dp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/open_sans_bold"
                                android:gravity="center|end"

                                android:text="Total UnsoldItem  : "
                                android:textColor="@color/black"
                                android:textSize="10sp" />


                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/Grey" />


                            <TextView
                                android:id="@+id/unsold_totalCount_textview"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/open_sans_bold"
                                android:gravity="center"
                                android:text="0000"
                                android:textColor="@color/black"
                                android:textSize="10sp" />


                        </TableRow>


                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/totalCountDetails_cardview"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="20dp"
                android:visibility="gone"
                app:cardElevation="10dp"
                android:layout_below="@+id/tableLyout"
                android:layout_height="wrap_content" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    >





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center_vertical"
                            android:text="No.of Batches not sold yet :"
                            android:paddingStart="3dp"
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:layout_weight=".6"
                            android:textSize="13sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/noofbatchesnotsoldyet_Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="left|center_vertical"
                            android:text="000000"
                            android:layout_weight="1"

                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center_vertical"
                            android:text="Total No.of Stock in hand :"
                            android:paddingStart="3dp"
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:layout_weight=".6"
                            android:textSize="13sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/totalnoofstockinhand_Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="left|center_vertical"
                            android:text="000000"
                            android:layout_weight="1"

                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center_vertical"
                            android:text=" No.of Items Sold :"
                            android:paddingStart="3dp"
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:layout_weight=".6"
                            android:textSize="13sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/totalnoofsolditem_Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="left|center_vertical"
                            android:text="000000"
                            android:layout_weight="1"

                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center_vertical"
                            android:text="No.of items Unsold :"
                            android:paddingStart="3dp"
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:layout_weight=".6"
                            android:textSize="13sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/noofitemsunsold_Textview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="left|center_vertical"
                            android:text="000000"
                            android:layout_weight="1"

                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>



                </LinearLayout>






            </androidx.cardview.widget.CardView>














    <ListView

        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:layout_marginStart="10dp"
        android:scrollbars="none"
        android:layout_marginEnd="10dp"
         android:background="@color/TMCBackgroundLightPurpleColor"
        android:visibility="gone"
        android:layout_weight=" 1"
        android:layout_marginBottom="15dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/totalCountDetails_cardview"
        />




</RelativeLayout


    >
