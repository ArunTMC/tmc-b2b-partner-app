<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    android:background="@color/TMCBackgroundLightPurpleColor"
    android:orientation="vertical"
    tools:context=".fragment.DeliveryCenterSettingsFragment">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:paddingBottom="40dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ManageRetailerDetailsConfiguration_linearLayout"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/courier_prime_bold"
                android:text="Manage Retailer Details"
                android:textAllCaps="false"
                android:paddingStart="5dp"
               
                android:gravity="center_vertical"
                android:textColor="@color/Grey"
                android:background="@color/TMCBackgroundLightPurpleColor"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_or_edit_retailers_button"
                android:background="@drawable/custom_bordered_ripple"
                android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:layout_weight=".1"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:text="Add or Edit Retailer Details "
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:alpha=".7"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="10dp"
                        android:contentDescription="@string/todo"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/rightarrow" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/TMCBackgroundLightPurpleColor" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:paddingBottom="40dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ManageGoatDetailsConfiguration_linearLayout"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/courier_prime_bold"
                android:text="Manage Order Details"
                android:textAllCaps="false"
                android:paddingStart="5dp"
               
                android:gravity="center_vertical"
                android:textColor="@color/Grey"
                android:background="@color/TMCBackgroundLightPurpleColor"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_bordered_ripple"
                android:id="@+id/datewisePlacedOrdersList_button"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Datewise Placed Orders List "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_weight=".1"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="1dp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_semibold"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp"
                    android:alpha=".7"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="10dp"
                        android:scaleType ="centerCrop"
                        android:src="@mipmap/rightarrow"
                        android:contentDescription="@string/todo" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>




    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/TMCBackgroundLightPurpleColor" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:paddingBottom="40dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/GeneralConfiguration_linearLayout"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/courier_prime_bold"
                android:text="General"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/Grey"
                android:background="@color/TMCBackgroundLightPurpleColor"
                android:textSize="15sp" />

            <Button
                android:id="@+id/goatgradeDetails_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_edittext_with_greyborder"
                android:elevation="4dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:text="Change Goat Grade Details"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/Delivery_Center_Name"
                    android:layout_marginTop="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/deliveryCenter_name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"

                    />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".2"

                android:visibility="visible"
                android:background="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/Mobile_Number"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans_bold"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="+91-----------"
                    android:textSize="14sp"

                    android:id="@+id/userMobileNo"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"

                    />
            </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:alpha=".2"
                    android:visibility="gone"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/black" />





            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LogInAsAnotherVendor"
                android:textColor="@color/black"
                android:visibility="gone"
                android:id="@+id/deliverycenterLogin"
                android:gravity="start|center_vertical"
                android:background="@drawable/white_edittext_with_greyborder"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingStart="10dp"
                android:elevation="4dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans_bold"/>








        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/TMCBackgroundLightPurpleColor" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:paddingBottom="40dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/logout_button"
        android:text="@string/LogOut"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_backgroundwith_black_border"
        android:gravity="center"
        android:textAllCaps="false"
        android:fontFamily="@font/open_sans_bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version :  "
                android:textColor="@color/colorTransparent"
                android:textSize="12sp"
                android:layout_marginTop="5dp"

                android:fontFamily="@font/open_sans_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Version_No"
                android:textColor="@color/colorTransparent"
                android:textSize="12sp"
                android:layout_marginTop="5dp"

                android:fontFamily="@font/open_sans_bold"/>
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>