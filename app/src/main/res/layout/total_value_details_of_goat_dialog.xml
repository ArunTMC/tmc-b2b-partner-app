                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center_vertical"
                            android:paddingStart="3dp"
                            android:text="No of Goats"
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/totalGoats_textView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:text="0"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:fontFamily="@font/open_sans_bold"
                            />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:text="Batch Price (₹) "
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            android:paddingStart="3dp"
                            android:fontFamily="@font/open_sans_bold"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:text="0"
                            android:id="@+id/batchValue_textView"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:fontFamily="@font/open_sans_bold"
                            />



                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:text="Total Weight ( Kg ) "
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            android:paddingStart="3dp"
                            android:fontFamily="@font/open_sans_bold"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:id="@+id/finaltotalWeight_textView"
                            android:text="0"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:fontFamily="@font/open_sans_bold"
                            />



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:layout_marginEnd="5dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:text="Total Value ( Rs ) "
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            android:paddingStart="3dp"
                            android:fontFamily="@font/open_sans_bold"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:id="@+id/totalValue_textView"
                            android:text="0"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:fontFamily="@font/open_sans_bold"
                            />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:text="Total Amount (₹) "
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            android:paddingStart="3dp"
                            android:fontFamily="@font/open_sans_bold"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:id="@+id/finalGoatValue_textView"
                            android:text="0"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:fontFamily="@font/open_sans_bold"
                            />



                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:text="Feed Amount (₹) "
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            android:paddingStart="3dp"
                            android:fontFamily="@font/open_sans_bold"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:id="@+id/finalFeedValue_textView"
                            android:text="0"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:fontFamily="@font/open_sans_bold"
                            />



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:text="Discount (₹) "
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            android:paddingStart="3dp"
                            android:fontFamily="@font/open_sans_bold"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/discountValue_textView"
                            android:layout_height="30dp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:text="0"
                            android:visibility="gone"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/white_backgroundwith_black_border"
                            android:fontFamily="@font/open_sans_bold"
                            />


                        <EditText
                            android:id="@+id/discountValue_editText"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_edittext_with_greyborder"
                            android:digits="+0123456789"
                            android:fontFamily="@font/open_sans_semibold"
                            android:gravity="center_vertical"
