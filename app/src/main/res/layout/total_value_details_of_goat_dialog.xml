            android:id="@+id/itemCountDetails2_CardView"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    >





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center_vertical"
                            android:text="Male goats   "
                            android:paddingStart="3dp"
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            tools:ignore="RtlSymmetry" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/white_backgroundwith_black_border"
                                android:orientation="horizontal"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="3dp"

                                >
                                <TextView
                                    android:id="@+id/male_Qty_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:paddingStart="3dp"

                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="left|center_vertical"
                                    android:text="0000 nos "
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/male_percentage_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="( 100% ) "
                                    android:gravity="left|center_vertical"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_bold" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center_vertical"
                            android:paddingStart="3dp"
                            android:text="Female goats   "
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:textSize="13sp"
                            tools:ignore="RtlSymmetry" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/white_backgroundwith_black_border"
                                android:orientation="horizontal"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="3dp"

                                >

                                <TextView
                                    android:id="@+id/female_Qty_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="left|center_vertical"
                                    android:text="000"
                                    android:paddingStart="3dp"

                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/female_Percentage_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="000"
                                    android:gravity="left|center_vertical"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_bold" />


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="center_vertical"
                            android:paddingStart="3dp"
                            android:text="Average Live Wt   "
                            android:textColor="@color/TMCPrimaryPurpleColor"
                            android:layout_weight="1"

                            android:textSize="13sp"
                            tools:ignore="RtlSymmetry" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"


                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/white_backgroundwith_black_border"
                                android:orientation="horizontal"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="3dp"

                                >


                                <TextView
                                    android:id="@+id/approxLiveWeightAvg_Textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="left|center_vertical"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="4dp"
                                    android:text="000000"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="Kg"

                                    android:layout_gravity="center"
                                    android:gravity="left|center_vertical"
                                    android:fontFamily="@font/open_sans_bold"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_bold"
                            android:gravity="left|center_vertical"                                 android:paddingStart="3dp"
                            android:text="Average Meat Yield     "
                            android:textColor="@color/TMCPrimaryPurpleColor"

                            android:textSize="13sp"
                            tools:ignore="RtlSymmetry" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"


                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/white_backgroundwith_black_border"
                                android:orientation="horizontal"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="3dp"

                                >

                                <TextView
                                    android:id="@+id/meatYieldWeightAvg_Textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="left|center_vertical"                                     android:paddingEnd="4dp"
                                    android:text="000000"
                                    android:paddingStart="6dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="Kg"
                                    android:gravity="left|center_vertical"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans_bold"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
