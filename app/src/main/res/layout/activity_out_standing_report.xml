<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".second_version.activity.OutStandingReport">




    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="@color/TMC_ProgressBarGrey_Color"
        android:orientation="vertical"
        android:translationZ="100dp"
        android:alpha=".7"
        android:layout_centerInParent="true"
        android:visibility="gone" >


    </LinearLayout>

    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerInParent="true"
        android:translationZ="100dp"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/TMCPrimaryPurpleColor"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>





    <LinearLayout
        android:id="@+id/back_IconLayout"
        android:layout_width="40dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/backButton_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            android:src="@drawable/icon_backbutton" />
    </LinearLayout>


    <TextView
        android:id="@+id/toolBarHeader_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/back_IconLayout"
        android:text="Outstanding Report"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/border_line" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/divider"
        android:layout_alignParentEnd="true"
        android:id="@+id/total_CardView"
        android:layout_marginTop="13dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/deliverycentreName_textview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:text="Meat Chop Delivery Centre"
            android:textColor="@color/TMCPrimaryPurpleColor"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="Customer Balances"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="right"
                android:layout_weight="1.3"
                android:text="As of "
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/as_of_date_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="left"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="2023-04-13"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="No of Buyers "
            android:textColor="@color/black"
            android:textSize="13sp" />
            <TextView
                android:id="@+id/no_of_buyers_withoutstandingAmount"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="end|center_vertical"
                android:text="100"
                android:layout_weight="2"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:text="Total outstanding amount"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/totalOutStandingAmount_textview"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="end|center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="100000"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    </androidx.cardview.widget.CardView>






    <androidx.core.widget.NestedScrollView

        android:id="@+id/idNestedSV"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/total_CardView"
        android:layout_height="match_parent"
        >

        <!--linear layout for displaying
            our recycler view-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nestedCardView"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/TMCPalePurple"
               android:paddingStart="8dp"
                android:paddingEnd="15dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="CUSTOMER NAME"
                    android:paddingStart="7dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans_semibold"
                    android:layout_weight="1"
                    android:textSize="13sp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center_vertical|end"
                    android:text="BALANCE AMT"
                    android:textSize="13sp"


                    />

            </LinearLayout>
            <!--recycler view for displaying our list of data
                and we are making nested scroll for our
                recycler view as false-->

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/outstandingAmountlist_recyclerview"
                />

            <!--we are adding progress bar
                for the purpose of loading-->
            <ProgressBar
                android:id="@+id/idPBLoading"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/instructionTextview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/idNestedSV"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="  "
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="16sp" />
</RelativeLayout>