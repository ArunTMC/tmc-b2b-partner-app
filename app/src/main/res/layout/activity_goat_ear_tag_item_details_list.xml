<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GoatEarTagItemDetailsList">


    <LinearLayout
        android:id="@+id/back_IconLayout"
        android:layout_width="40dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/backButton_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            android:src="@drawable/icon_backbutton" />
    </LinearLayout>

    <TextView
        android:id="@+id/toolBarHeader_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="@string/reviewed_item_details"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:visibility="gone"
        android:id="@+id/cartclearing_IconLayout"
        >
        <ImageView
            android:id="@+id/cartclearing_Icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType ="centerCrop"
            android:src="@mipmap/delete_icon"
            android:contentDescription="@string/todo" />
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/border_line" />



    <androidx.cardview.widget.CardView
        android:id="@+id/scanBarcode_view"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/TMCPink"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_below="@+id/divider"
        android:visibility="gone"
        android:layout_marginTop="18dp"
        android:textColor="@color/TMCDarkPinkTextColor"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/scanner"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/todo" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/scanBarcodeLayout_textview"
            android:textColor="@color/black"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="7dp"
            android:layout_height="wrap_content"
            android:text="@string/search_edit_barcode" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/divider"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/searchBarcode_layout"
        android:orientation="horizontal">





        <TextView
            android:id="@+id/barcodeNo_textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:text="Search Barcode Here"
            android:paddingStart="10dp"
            android:background="@drawable/white_backgroundwith_black_border"
            android:paddingEnd="5dp"
            android:visibility="visible"
            />

        <EditText
            android:id="@+id/barcode_editText"
            android:background="@drawable/white_edittext_with_greyborder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="12dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="13sp"
            android:hint="Enter Barcode"
            android:imeOptions="actionDone"
            android:visibility="gone"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginEnd="10dp"
            android:id="@+id/search_IconLayout"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType ="centerCrop"
                android:src="@mipmap/search_icon"
                android:visibility="visible"
                android:contentDescription="@string/todo" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:id="@+id/close_IconLayout"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType ="fitXY"
                android:alpha=".8"
                android:visibility="visible"
                android:src="@mipmap/close_thicker_icon"
                android:contentDescription="@string/todo" />
        </LinearLayout>

    </LinearLayout>



    <ListView
        android:id="@+id/earTagItems_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scrollbars="none"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="15dp"
        android:elevation="30dp"
        android:visibility="gone"
        android:dividerHeight="2dp"
        android:background="@drawable/grey_backgroundwith_black_border"
        android:layout_below="@+id/searchBarcode_layout"
        android:layout_marginTop="15dp"/>





    <TextView
        android:id="@+id/instruction_Textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:elevation="30dp"
        android:text="There is No data to display"
        android:visibility="visible"
        android:fontFamily="@font/open_sans_bold"
        android:layout_below="@+id/searchBarcode_layout"
        android:layout_marginTop="17dp"/>






    <FrameLayout
        android:id="@+id/batchItemDetailsFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/TMCTransparentColor"
        android:elevation="30dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TMC_ProgressBarGrey_Color"
        android:alpha=".6"
        android:translationZ="90dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:translationZ="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/TMCPrimaryPurpleColor"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>



</RelativeLayout>