<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".second_version.activity.ClearOutstandingCreditAmountScreen">


    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TMC_ProgressBarGrey_Color"
        android:orientation="vertical"
        android:translationZ="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha=".7"
        android:layout_centerInParent="true"
        android:visibility="gone" >


    </LinearLayout>

    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerInParent="true"
        android:translationZ="100dp"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/TMCPrimaryPurpleColor"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/back_IconLayout"
        android:layout_width="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/backButton_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            android:src="@drawable/icon_backbutton" />
    </LinearLayout>

    <TextView
        android:id="@+id/toolBarHeader_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_IconLayout"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Record New Payment "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/toolBarHeader_TextView"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_line" />





        <LinearLayout
            android:id="@+id/searchname_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/retailer_mobileNo_Name_textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/white_backgroundwith_black_border"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="Search Retailer MobileNo /  Name Here"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="visible" />

            <AutoCompleteTextView
                android:id="@+id/retailerName_autoComplete"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/white_edittext_with_greyborder"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:hint="Enter Retailer MobileNo / Name"
                android:imeOptions="actionDone"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/search_IconLayout"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/search_icon"
                    android:visibility="visible" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/close_IconLayout"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:alpha=".8"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitXY"
                    android:src="@mipmap/close_thicker_icon"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/secondDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchname_layout" />



    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/secondDivider"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                android:layout_marginBottom="50dp"

                app:cardCornerRadius="20dp"


                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/buyerName_label"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="14sp"
                        android:text= "Buyer's  Name" />

                    <AutoCompleteTextView
                        android:id="@+id/buyerName_autoComplete_textview"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="35dp"
                        android:text=" "
                        android:padding="5dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/white_edittext_with_greyborder"
                        android:layout_marginTop="4dp"
                        android:visibility="visible"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="15dp"
                        tools:layout_editor_absoluteY="9dp"
                        tools:ignore="LabelFor" />





                    <TextView
                        android:id="@+id/buyerMobileNo_label"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:text= "Buyer's Mobileno" />



                    <TextView
                        android:id="@+id/buyerMobileNo_textview"
                        android:layout_width="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="35dp"
                        android:text="-"
                        android:padding="5dp"
                        android:layout_marginTop="4dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/grey_edittext_withoutborder"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:textColor="@color/black"
                        android:layout_marginEnd="15dp"
                        tools:layout_editor_absoluteY="9dp" />



                    <TextView
                        android:id="@+id/buyersAdddress_label"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:text= "Buyer's Address" />

                    <TextView
                        android:id="@+id/buyersAdddress_textview"
                        android:layout_width="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="55dp"
                        android:text="-"
                        android:padding="5dp"
                        android:layout_marginTop="4dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/grey_edittext_withoutborder"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:textColor="@color/black"
                        android:layout_marginEnd="15dp"
                        tools:layout_editor_absoluteY="9dp" />





                    <TextView
                        android:id="@+id/opening_Balance_Amount_label_dialog"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:text= "Opening Balance" />

                    <TextView
                        android:id="@+id/totalOutStandingAmount_textview"
                        android:layout_width="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="35dp"
                        android:text="-"
                        android:padding="5dp"
                        android:layout_marginTop="4dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/grey_edittext_withoutborder"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:textColor="@color/black"
                        android:layout_marginEnd="15dp"
                        tools:layout_editor_absoluteY="9dp" />



                    <TextView
                        android:id="@+id/amountPaid_label"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:text= "Amount Paid" />


                    <EditText
                        android:id="@+id/amountPaid_editText"
                        android:layout_width="match_parent"
                        android:gravity="left|center_vertical"
                        android:layout_marginTop="3dp"
                        android:layout_height="35dp"
                        android:text=""
                        android:background="@drawable/white_edittext_with_greyborder"
                        android:visibility="visible"
                        android:inputType="number"
                        android:digits="0123456789."
                        android:imeOptions="actionDone"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="15dp"
                        tools:layout_editor_absoluteY="9dp" />



                    <TextView
                        android:id="@+id/paymentMode_label"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:text= "Payment Mode" />



                    <Spinner
                        android:id="@+id/paymentMode_spinner"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/amountpaid_View"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="35dp"
                        android:text=" "
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:background="@drawable/white_edittext_with_greyborder"
                        android:textColor="@color/black"
                        android:layout_marginEnd="15dp"
                        tools:layout_editor_absoluteY="9dp" />

                    <TextView
                        android:id="@+id/newOutstanding_label_dialog"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:text= "New Outstanding" />

                    <TextView
                        android:id="@+id/newOutstanding_textView_dialog"
                        android:layout_width="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="35dp"
                        android:text="-"
                        android:padding="5dp"
                        android:layout_marginTop="4dp"
                        android:gravity="right"
                        android:background="@drawable/grey_edittext_withoutborder"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:layout_marginEnd="15dp"
                        tools:layout_editor_absoluteY="9dp" />


                    <TextView
                        android:id="@+id/notes_label"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:text= "Notes " />



                    <EditText
                        android:id="@+id/notes_edittext"
                        android:layout_width="match_parent"
                        android:textSize="15sp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="30dp"
                        android:padding="10dp"
                        android:background="@drawable/white_edittext_with_greyborder"
                        android:textColor="@color/black"
                        android:gravity="left|center_vertical"
                        android:inputType="textMultiLine"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/notes_label"
                        android:layout_height="70dp"
                        android:text="" />

                    <Button
                        android:id="@+id/save_button"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:background="@drawable/blue_button_background"
                        android:elevation="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/notes_edittext"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/courier_prime_bold"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </LinearLayout>





            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/noOutstandingCredit_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:elevation="60dp"
        android:fontFamily="@font/courier_prime_bold"
        android:text="There is no Outstanding amount for this retailer"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/retaialerDetailsCardview" />

    <Button
        android:id="@+id/recordPaymentButton"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_button_background"
        android:elevation="60dp"
        android:visibility="gone"
        android:fontFamily="@font/courier_prime_bold"
        android:text="Record Payment"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retaialerDetailsCardview" />

</androidx.constraintlayout.widget.ConstraintLayout>