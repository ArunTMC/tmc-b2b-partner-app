<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="9dp"
        android:elevation="5dp"
        android:id="@+id/cardView"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="15dp"
        android:layout_height="180dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"

            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5.4"
                android:gravity="center"
                android:id="@+id/scan_layout"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/TMCPrimaryPurpleColor"
                    android:textSize="13sp"
                    android:text="@string/scan" />

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/scanner"

                    android:contentDescription="@string/todo" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                >



                <TextView
                android:id="@+id/barcodeno_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="8dp"
                android:textColor="@color/TMCPrimaryPurpleColor"
                android:textSize="13sp"
                android:text="@string/barcode" />

            <TextView
                android:id="@+id/barcodeNo_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:gravity="center_vertical|start"
                android:visibility="gone"
                android:background="@drawable/white_edittext_with_greyborder"
                android:text="@string/sampleBatchId" />
                <EditText
                    android:id="@+id/barcode_editText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@drawable/grey_backgroundwith_black_border"
                    android:paddingStart="8dp"
                    android:gravity="center_vertical|start"/>

            </LinearLayout>




        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/itemCount_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:paddingStart="2dp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="111" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:layout_marginStart="18dp"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/currentWeight_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="13sp"
                        android:text="@string/current_weight" />

                    <TextView
                        android:id="@+id/currentWeight_textview"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:paddingStart="8dp"
                        android:gravity="center_vertical|start"
                        android:visibility="visible"
                        android:background="@drawable/white_edittext_with_greyborder"
                        android:text="" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/newWeight_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="13sp"
                        android:text="@string/new_details" />

                    <EditText
                        android:id="@+id/newWeight_editText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:paddingStart="8dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical|start"
                        android:visibility="visible"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:digits="0987654321."
                        android:background="@drawable/grey_backgroundwith_black_border"
                        android:text="" />


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"

                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:id="@+id/delete_layout"
                    android:orientation="vertical"
                    >




                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/delete_icon"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/todo" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_weight="1.3"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/gender_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="13sp"
                        android:text="@string/gender_type" />

                    <TextView
                        android:id="@+id/gender_textview"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:paddingStart="8dp"
                        android:gravity="center_vertical|start"
                        android:visibility="visible"
                        android:background="@drawable/white_edittext_with_greyborder"
                        android:text="" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/breed_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/TMCPrimaryPurpleColor"
                        android:textSize="13sp"
                        android:text="@string/breed_type" />

                    <TextView
                        android:id="@+id/breed_textview"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:paddingStart="8dp"
                        android:gravity="center_vertical|start"
                        android:visibility="visible"
                        android:background="@drawable/white_edittext_with_greyborder"
                        android:text="" />


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/add_new_details_button"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/pink_button_background"
        android:elevation="40dp"
        android:fontFamily="@font/courier_prime_bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/add_items"
        android:textAllCaps="false"
        android:textColor="@color/TMCDarkPinkTextColor"
        android:textSize="16sp" />


</LinearLayout>