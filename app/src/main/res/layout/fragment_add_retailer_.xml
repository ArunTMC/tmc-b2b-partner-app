<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TMCTransparentColor"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_edittext_with_greyborder"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/toolBarHeader_TextView"
                android:layout_width="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:visibility="gone"

                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="@string/create_new_batch" />
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="54dp"
                android:visibility="gone"

                android:background="@drawable/border_line"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="13dp"

                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/back_IconLayout"
                    >
                    <ImageView
                        android:id="@+id/backButton_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="center"
                        android:src="@drawable/icon_backbutton"
                        android:contentDescription="@string/todo" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_semibold"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/TMCPrimaryPurpleColor"
                                android:textSize="14sp"
                                android:text="Buyers Name" />



                            <EditText
                                android:id="@+id/retailerName_textView"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:importantForAutofill="no"

                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/black"
                                android:singleLine="true"
                                android:background="@drawable/grey_edittext_withoutborder"
                                android:textSize="15sp"
                                android:hint="Enter Buyers Name "
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="15dp"
                                android:paddingStart="6dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="5dp"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_semibold"
                                android:layout_marginTop="6dp"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/TMCPrimaryPurpleColor"
                                android:textSize="14sp"
                                android:text="Buyers Phone Number" />


                            <EditText
                                android:id="@+id/mobileNo_textView"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/black"
                                android:singleLine="true"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:maxLength="10"
                                android:importantForAutofill="no"

                                android:background="@drawable/grey_edittext_withoutborder"
                                android:textSize="15sp"
                                android:hint="Enter Retailers Phone Number "
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="15dp"
                                android:paddingStart="6dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="5dp"
                                />





                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_semibold"
                                android:layout_marginTop="6dp"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/TMCPrimaryPurpleColor"
                                android:textSize="14sp"
                                android:text="GST IN" />



                            <EditText
                                android:id="@+id/gstin_editText"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:importantForAutofill="no"

                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/black"
                                android:singleLine="true"
                                android:background="@drawable/grey_edittext_withoutborder"
                                android:textSize="15sp"
                                android:hint="Enter GSTIN Value "
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="15dp"
                                android:paddingStart="6dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="5dp"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_semibold"
                                android:layout_marginTop="6dp"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/TMCPrimaryPurpleColor"
                                android:textSize="14sp"
                                android:text="Address" />

                            <EditText
                                android:id="@+id/address_edittext"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:paddingStart="8dp"
                                android:singleLine="false"
                                android:inputType="textMultiLine"
                                android:hint="@string/address"
                                android:background="@drawable/grey_edittext_withoutborder"
                                android:layout_height="75dp" />


                            <TextView
                                android:id="@+id/address_textiew"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="12dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:paddingStart="8dp"
                                android:visibility="gone"
                                android:gravity="center_vertical"
                                android:singleLine="false"
                                android:inputType="textMultiLine"
                                android:hint="Address"
                                android:background="@drawable/white_edittext_with_greyborder"
                                android:layout_height="65dp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/goatstatus_layout"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans_semibold"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginStart="12dp"
                                    android:textColor="@color/TMCPrimaryPurpleColor"
                                    android:textSize="14sp"
                                    android:text="@string/goat_status" />

                                <TextView
                                    android:id="@+id/selectedGoatStatus_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:buttonTint="@color/black"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="20dp"

                                    android:background="@drawable/white_edittext_with_greyborder"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:padding="10dp"
                                    android:visibility="gone"
                                    android:layout_marginBottom="10dp"
                                    />



                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:id="@+id/goatstatusradiogrp"
                                    android:layout_height="match_parent" >

                                    <RadioButton
                                        android:id="@+id/dead_goat_radio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/open_sans_bold"
                                        android:buttonTint="@color/black"
                                        android:alpha=".7"
                                        android:textSize="12sp"
                                        android:layout_marginEnd="10dp"
                                        android:text="@string/goatdead" />

                                    <RadioButton
                                        android:id="@+id/sick_goat_radio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/open_sans_bold"
                                        android:buttonTint="@color/black"
                                        android:alpha=".7"
                                        android:textSize="12sp"

                                        android:layout_marginEnd="10dp"
                                        android:text="@string/goatsick" />

                                    <RadioButton
                                        android:id="@+id/normal_goat_radio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:alpha=".7"
                                        android:buttonTint="@color/black"
                                        android:checked="true"
                                        android:textSize="12sp"

                                        android:fontFamily="@font/open_sans_bold"
                                        android:text="@string/good"
                                        android:textColor="@color/black" />
                                </RadioGroup>



                            </LinearLayout>




                            <Button
                                android:id="@+id/save_button"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blue_button_background"
                                android:elevation="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/courier_prime_bold"
                                android:text="@string/save"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="18sp" />


                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>




            </androidx.cardview.widget.CardView>




        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TMC_ProgressBarGrey_Color"
        android:alpha=".6"
        android:translationZ="90dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:translationZ="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/TMCPrimaryPurpleColor"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>
</RelativeLayout>